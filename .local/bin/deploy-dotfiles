#!/bin/sh
# Hard link all config files

CDIR="$HOME/repos/dotfiles"
FILES=$( find "$CDIR" -type f ! -path "*/.git/*" ! -iname "LICENSE" ! -iname "*.md" )
DIRS=$( find "$CDIR" -mindepth 1 -type d ! -path "*/.git/*" ! -iname ".git"  )

for dir in $DIRS; do [[ ! -d "$HOME/${dir##*/dotfiles/}" ]] && mkdir -p "$HOME/${dir##*/dotfiles/}"; done
for file in $FILES; do ln -f "$file" "$HOME/${file##*/dotfiles/}"; done
